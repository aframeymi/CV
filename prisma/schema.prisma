generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Role {
  id          String  @id @default(cuid())
  title       String  @unique
  description String?
  users       User[]
}

model User {
  id           String   @id @default(cuid())
  createdAt    DateTime @default(now()) @map("created_at")
  firstName    String   @map("first_name")
  lastName     String   @map("last_name")
  phone        String
  email        String   @unique
  passwordHash String   @map("password_hash")
  firebaseUid  String?  @map("firebase_uid")
  roleId       String   @map("role_id")
  reports      Report[]
  role         Role     @relation(fields: [roleId], references: [id])

  @@index([roleId])
  @@map("users")
}

model City {
  id            String         @id @default(cuid())
  name          String         @unique
  code          String?
  neighborhoods Neighborhood[]

  @@map("cities")
}

model Neighborhood {
  id        String   @id @default(cuid())
  name      String
  cityId    String   @map("city_id")
  createdAt DateTime @default(now()) @map("created_at")
  city      City     @relation(fields: [cityId], references: [id], onDelete: Cascade)
  reports   Report[]

  @@unique([cityId, name])
  @@index([cityId])
  @@map("neighborhoods")
}

model Category {
  id      String   @id @default(cuid())
  name    String   @unique
  reports Report[] @relation("CategoryToReport")

  @@map("categories")
}

model Report {
  id             String         @id @default(cuid())
  createdAt      DateTime       @default(now()) @map("created_at")
  title          String
  description    String
  imageUrl       String?        @map("image_url")
  status         Status         @default(OPEN)
  authorId       String         @map("author_id")
  neighborhoodId String         @map("neighborhood_id")
  attachments    Attachment[]
  author         User           @relation(fields: [authorId], references: [id])
  neighborhood   Neighborhood   @relation(fields: [neighborhoodId], references: [id])
  statusChanges  StatusChange[]
  categories     Category[]     @relation("CategoryToReport")

  @@index([authorId])
  @@index([neighborhoodId])
  @@index([createdAt])
  @@map("reports")
}

model Attachment {
  id        String   @id @default(cuid())
  reportId  String   @map("report_id")
  url       String
  mimeType  String?  @map("mime_type")
  sizeBytes Int?     @map("size_bytes")
  createdAt DateTime @default(now()) @map("created_at")
  report    Report   @relation(fields: [reportId], references: [id], onDelete: Cascade)

  @@index([reportId])
  @@map("attachments")
}

model StatusChange {
  id        String   @id @default(cuid())
  reportId  String   @map("report_id")
  from      Status   @map("from_status")
  to        Status   @map("to_status")
  changedAt DateTime @default(now()) @map("changed_at")
  changedBy String?  @map("changed_by")
  report    Report   @relation(fields: [reportId], references: [id], onDelete: Cascade)

  @@index([reportId, changedAt])
  @@map("status_change")
}

enum Status {
  OPEN
  IN_PROGRESS
  RESOLVED
}
